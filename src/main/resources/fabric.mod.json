{
  "schemaVersion": 1,
  "id": "nqt",
  "version": "${version}",

  "name": "NotCoded's Quality Tweaks",
  "description": "Adds Quality of life tweaks, bug fixes and performance tweaks, which you can toggle in the config.",
  "authors": [
    "NotCoded"
  ],
  "contact": {
    "homepage": "https://notcoded.is-a.dev/",
    "sources": "https://github.com/not-coded/NQT",
    "issues": "https://github.com/not-coded/NQT/issues"
  },

  "license": "GPL-3.0",
  "icon": "assets/nqt/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.notcoded.nqt.NQT"
    ],
    "modmenu": [
      "net.notcoded.nqt.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "NQT.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "minecraft": "1.20.x",
    "fabric-key-binding-api-v1": ">=1.0.36",
    "fabric-resource-loader-v0": ">=0.11.7",
    "cloth-config2": ">=4.9.0",
    "java": ">=16"
  }
}
